@section Scripts {
    <script>
        let hotels = []; // 用於存儲從API獲取的所有飯店數據
        const hotelContainer = document.getElementById('hotelContainer');
        const statusSelect = document.getElementById('inputGroupSelectStatus');

        // 獲取飯店數據
        fetch('https://localhost:7103/api/BackSideHotel')
            .then(response => response.json())
            .then(data => {
               
                hotels = data;
                console.log('Fetched hotels:', hotels); // 調試信息
                renderHotels(hotels); // 初次渲染所有飯店
            })
            .catch(error => {
                console.error('Error fetching hotels:', error);
            });

        // 根據選擇的狀態過濾並渲染飯店清單
        function renderHotels(hotelList) {
            let str = "";
            hotelList.forEach(item => {
                let status = item.hotelIsActive ? "已上架" : "待審核";
                str += `
                            <tr>
                                <td>${item.hotelID}</td>
                                <td>${item.hotelName}</td>
                                <td>${item.hotelAddress}</td> <!-- 飯店地址 -->
                                <td>${item.hotelPhone}</td> <!-- 飯店電話 -->
                                <td>${status}</td> <!-- 飯店審核狀態 -->
                                <td><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">詳細內容</button></td>
                            </tr>
                        `;
            });
            hotelContainer.innerHTML = str;
            console.log('Rendered hotels:', hotelList); // 調試信息
        }
        // 將飯店名稱添加到選單
        function populateHotelSelect(hotelsName) {
            let str = "";
            hotelsName.forEach(hotel => {
                str += `
                         <select>
                    <option value="${hotel.hotelID}">${hotel.hotelName}</option>
                             </select>
                `;
            });
            inputGroupSelectHotel.innerHTML = str;
            console.log('Rendered hotelsName:', hotelsName); // 調試信息
        }

   
    </script>
}
