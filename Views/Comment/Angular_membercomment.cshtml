                    let eventHandled = false;

                    memberCommentElement.addEventListener('navigateToForm', function (event) {
                        if (eventHandled) return; // 确保事件只处理一次
                        eventHandled = true;

                        const params = new URLSearchParams(event.detail).toString();
                        console.log('Navigating with params:', params); // 打印生成的查询参数
