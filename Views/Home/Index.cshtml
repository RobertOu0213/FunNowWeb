    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('search-input');
            const autocompleteList = document.getElementById('autocomplete-list');

            searchInput.addEventListener('input', async function () {
                const query = searchInput.value.trim();
                if (query.length > 0) {
                    const suggestions = await fetchSuggestions(query);
                    displaySuggestions(suggestions);
                } else {
                    clearSuggestions();
                }
            });

            function clearSuggestions() {
                autocompleteList.innerHTML = '';
            }

            async function fetchSuggestions(query) {
                try {
                    const response = await fetch(`https://localhost:7103/api/HotelSearch/suggestions?keyword=${encodeURIComponent(query)}`);
                    if (response.ok) {
                        return await response.json();
                    } else {
                        console.error('Failed to fetch suggestions:', response.status, response.statusText);
                        return [];
                    }
                } catch (error) {
                    console.error('Error fetching suggestions:', error);
                    return [];
                }
            }

            function displaySuggestions(suggestions) {
                clearSuggestions();
                suggestions.forEach(suggestion => {
                    const item = document.createElement('button');
                    item.type = 'button';
                    item.classList.add('list-group-item', 'list-group-item-action');
                    item.textContent = `${suggestion.hotelName}, ${suggestion.cityName}`;
                    item.addEventListener('click', () => {
                        searchInput.value = suggestion.hotelName;
                        clearSuggestions();
                    });
                    autocompleteList.appendChild(item);
                });
            }

            document.addEventListener('click', function (event) {
                if (!searchInput.contains(event.target) && !autocompleteList.contains(event.target)) {
                    clearSuggestions();
                }
            });
        });

    </script>

