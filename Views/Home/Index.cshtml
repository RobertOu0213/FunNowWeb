        const apiKey = 'AIzaSyAyKcSGzZi4LQsJEvbJOw3Kh8q_9uhtRvw';

        async function handleImageUpload(event) {
            const file = event.target.files[0];
            const imageLabel = document.getElementById('imageLabel');
            const landmarkName = document.getElementById('landmarkName');
            if (file) {
                console.log('已選擇文件:', file.name);
                imageLabel.textContent = `選擇的圖片: ${file.name}`;

                // 將圖片轉換為base64格式
                const reader = new FileReader();
                reader.onloadend = async function () {
                    const base64String = reader.result.replace('data:', '').replace(/^.+,/, '');

                    // 使用Google Cloud Vision API識別地標名稱
                    const response = await fetch(`https://vision.googleapis.com/v1/images:annotate?key=${apiKey}`, {
                        method: 'POST',
                        body: JSON.stringify({
                            requests: [
                                {
                                    image: {
                                        content: base64String
                                    },
                                    features: [
                                        {
                                            type: 'LANDMARK_DETECTION',
                                            maxResults: 5
                                        }
                                    ]
                                }
                            ]
                        }),
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const result = await response.json();
                    console.log(result);

                    if (result.responses && result.responses[0].landmarkAnnotations) {
                        const landmarks = result.responses[0].landmarkAnnotations;
                        landmarkName.innerHTML = ''; // 清空之前的地標內容

                        for (const landmark of landmarks) {
                            let landmarkInfo = `地標: ${landmark.description}`;

                            // 如果存在地理位置信息，則使用經緯度來獲取地標的地理位置信息
                            if (landmark.locations && landmark.locations.length > 0) {
                                const latitude = landmark.locations[0].latLng.latitude;
                                const longitude = landmark.locations[0].latLng.longitude;
                                const geocodeResponse = await fetch(`https://maps.googleapis.com/maps/api/geocode/json?latlng=${latitude},${longitude}&key=${apiKey}`);
                                const geocodeResult = await geocodeResponse.json();

                                if (geocodeResult.results && geocodeResult.results.length > 0) {
                                    const addressComponents = geocodeResult.results[0].address_components;
                                    let city = '';
                                    let country = '';

                                    for (const component of addressComponents) {
                                        if (component.types.includes('locality')) {
                                            city = component.long_name;
                                        } else if (component.types.includes('country')) {
                                            country = component.long_name;
                                        }
                                    }

                                    landmarkInfo += city ? `，城市: ${city}` : '';
                                    landmarkInfo += country ? `，國家: ${country}` : '';
                                } else {
                                    landmarkInfo += '，無法獲取城市信息';
                                }
                            } else {
                                // 如果不存在地理位置信息，顯示無法獲取地理位置信息
                                landmarkInfo += '，無法獲取地理位置信息';
                            }

                            // 顯示每個地標信息
                            const landmarkElement = document.createElement('div');
                            landmarkElement.textContent = landmarkInfo;
                            landmarkName.appendChild(landmarkElement);
                        }
                    } else {
                        landmarkName.textContent = '無法識別地標';
                    }
                };
                reader.readAsDataURL(file);
            } else {
                imageLabel.textContent = '尚未選擇圖片';
