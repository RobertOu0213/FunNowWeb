    <script>
        // 可折疊的下拉選單
        function toggleDropdown() {
            var dropdownMenu = document.getElementById("dropdownMenu");
            // 檢查當前的顯示狀態
            if (dropdownMenu.style.display === "none" || dropdownMenu.style.display === "") {
                // 顯示下拉選單
                dropdownMenu.style.display = "block";
                // 添加點擊事件監聽器，處理外部點擊
                document.addEventListener('click', handleOutsideClick);
            } else {
                // 隱藏下拉選單
                dropdownMenu.style.display = "none";
                // 移除點擊事件監聽器
                document.removeEventListener('click', handleOutsideClick);
                resetDropdownValuesIfUnchanged();
            }
        }

        // 改變數量
        function changeQuantity(type, value) {
            var element = document.getElementById(type);
            var currentValue = parseInt(element.textContent); // 取得當前數量
            var newValue = currentValue + value; // 計算新數量
            if (newValue >= 0) { // 確保數量不小於0
                element.textContent = newValue; // 更新數量
                element.setAttribute('data-changed', 'true'); // 標記為已更改
            }
            updateDropdownText(); // 更新下拉選單文本
        }

        // 更新下拉選單的文本
        function updateDropdownText() {
            var rooms = document.getElementById("rooms").textContent;
            var adults = document.getElementById("adults").textContent;
            var children = document.getElementById("children").textContent;
            var dropdownToggle = document.querySelector(".dropdown-toggle1 span");
            dropdownToggle.textContent = rooms + " 客房, " + adults + " 成人, " + children + " 小童";
        }

        // 處理外部點擊
        function handleOutsideClick(event) {
            var dropdownMenu = document.getElementById('dropdownMenu');
            var dropdownToggle = document.querySelector(".dropdown-toggle1");
            // 檢查點擊是否發生在下拉選單或觸發按鈕之外
            if (!dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = 'none'; // 隱藏下拉選單
                document.removeEventListener('click', handleOutsideClick); // 移除點擊事件監聽器
                resetDropdownValuesIfUnchanged();
            }
        }

        // 重置下拉選單的數值為預設值
        function resetDropdownValuesIfUnchanged() {
            var rooms = document.getElementById("rooms");
            var adults = document.getElementById("adults");
            var children = document.getElementById("children");

            // 檢查是否有更改標記，沒有則重置為預設值
            if (!rooms.hasAttribute('data-changed')) {
                rooms.textContent = "1";
            }
            if (!adults.hasAttribute('data-changed')) {
                adults.textContent = "2";
            }
            if (!children.hasAttribute('data-changed')) {
                children.textContent = "0";
            }

            // 更新顯示的文本
            updateDropdownText();
        }

        // 添加全局點擊事件監聽器
        document.addEventListener('click', function (event) {
            var dropdownMenu = document.getElementById("dropdownMenu");
            var dropdownToggle = document.querySelector(".dropdown-toggle1");

            // 如果點擊發生在下拉選單和觸發按鈕之外
            if (!dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = 'none';
                document.removeEventListener('click', handleOutsideClick); // 移除點擊事件監聽器
                resetDropdownValuesIfUnchanged();
            }
        });
    </script>

