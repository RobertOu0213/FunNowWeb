@model IEnumerable<PrjFunNowWeb.ViewModels.OrderViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>訂單總覽 </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @section Styles {
        <style>
            .container {
                width: 70%;
                margin-top: 20px;
            }

            .table {
                border-collapse: separate;
                border-spacing: 0;
                border: 2px solid darkgray;
                border-radius: 30px;
            }

            .customer-info li {
                font-size: 0.9em;
                // 调整字体大小 color: #333;
                // 调整字体颜色
            }
        </style>
    }
    
</head>
<body>
    <div class="container">
        <h3 class="mt-5">訂單總覽- Hi~ 編號:@Model.FirstOrDefault()?.MemberId 房東您好</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>住客資訊</th>
                    <th>飯店</th>
                    <th>入住日期</th>
                    <th>價格</th>
                    <th>狀態</th>
                    <th>採取行動</th>
                </tr>
                <tr>
                    <th>所有訂單</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <ul class="customer-info" style="list-style-type:none; padding: 0;">
                                <!-- 移除列表样式和内边距 -->
                            <li><strong>訂單編號：</strong>@item.OrderNumber</li>
                           <li><strong>房客姓名：</strong>@item.GuestName</li>
                           <li><strong>天數：@item.Nights 天</li>
                         </ul>
                        </td>
                      
                        <td>@item.HotelName</td>
                        <td>@item.CheckInDate.ToString("yyyy/MM/dd") - @item.CheckOutDate.ToString("yyyy/MM/dd")</td>
                        <td>NTD$@item.Price</td>
                        <td style="color:@(item.Status == "已完成" ? "green" : "red")">@item.Status</td>
                        <td class="btn-center">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">...</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
      
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity = "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin = "anonymous" ></script>
        
    }
    
</body>
</html>
