@{
    ViewData["Title"] = "HotelMessage";
    Layout = "_Layout_HotelHome";
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* 全局样式 */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* 容器样式 */
        .container {
            display: flex;
            height: 100vh;
        }

        /* 左侧栏样式 */
        .left-panel {
            width: 33.33%;
            background-color: #FCFCFC;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #E0E0E0;
        }

            /* 左侧上部和下部样式 */
            .left-panel .top, .left-panel .bottom {
                box-sizing: border-box;
            }

            .left-panel .top {
                flex: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                background-color: #ffffff;
                border-bottom: 1px solid #ccc;
            }

                .left-panel .top .header {
                    width: 100%;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding:10px;
                }

                    .left-panel .top .header h2 {
                        margin: 0;
                        font-size: 18px;
                        font-weight: normal;
                        color: #000;
                    }

            .left-panel .bottom {
                flex: 9;
                overflow-y: auto;
            }

        .tab {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }

            .tab a {
                text-decoration: none;
                color: #000;
                padding: 10px;
                flex: 1;
                text-align: center;
                border-bottom: 2px solid transparent;
            }

                .tab a.active {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                }

                .tab a:hover {
                    color: #0056b3;
                }

        /* 右侧栏样式 */
        .right-panel {
            width: 66.67%;
            display: flex;
            flex-direction: column;
            margin:0px 10px;
        }

            /* 右侧上部、中部、下部样式 */
            .right-panel .top, .right-panel .middle, .right-panel .bottom {
                box-sizing: border-box;
            }

            .right-panel .top {
                flex: 1;
                background-color: #FCFCFC;
                display: flex;
                flex-direction: column;
                justify-content: center;
                box-sizing: border-box;
            }

            .right-panel .middle {
                flex: 7;
                background-color: #ffffff;
                overflow-y: auto;
                padding:10px;

            }

            .right-panel .bottom {
                flex: 1;
                background-color: #f9f9f9;
                display: flex;
                align-items: center;
            }

        /* 客人信息样式 */
        .customer-info {
            display: flex;
            align-items: center;
        }

            .customer-info img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin: 20px;
            }

            .customer-info div {
                display: flex;
                flex-direction: column;
            }

        /* 互动信息区样式 */
        .messages {
            list-style: none;
            padding: 0;
        }

            .messages li {
                margin-bottom: 10px;
            }

            .messages .customer-message {
                text-align: left;
            }

            .messages .owner-message {
                text-align: right;
            }

        /* 底部输入区样式 */
        .input-container {
            width: 100%;
            display: flex;
        }

            .input-container input {
                flex: 1;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                margin-right: 10px;
            }

            .input-container button {
                padding: 10px 20px;
                border: none;
                background-color: #007bff;
                color: #fff;
                border-radius: 5px;
                cursor: pointer;
            }

                .input-container button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <!-- 左侧栏 -->
        <div class="left-panel">
            <!-- 左侧上部 -->
            <div class="top">
                <div class="header">
                    <h2 style="font-size:30px">客人資訊</h2>
                </div>
                <div class="tab">
                    <a href="#" class="active">All messages</a>
                    <a href="#">Unread</a>
                </div>
            </div>
            <!-- 左侧下部 -->
            <div class="bottom">
                <!-- 左侧下部内容 -->
                <div class="customer-info" style="background-color:aliceblue">
                    <img src="path/to/customer-photo.jpg" alt="客人照片">
                    <div>
                        <span>姓名: 客人名稱</span>
                        <span>電話: 123456789</span>
                        <span>飯店: 客人選取飯店資訊</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 右侧栏 -->
        <div class="right-panel">
            <!-- 右侧上部 -->
            <div class="top">
                <div>
                    <span>姓名: 客人名稱</span>
                </div>
                <div class="customer-info">
                    <div>
                        <span>電話: 123456789</span>
                    </div>
                    <div>
                        <span>飯店: 客人選取飯店資訊</span>
                    </div>
                </div>
            </div>

            <!-- 右侧中部 -->
            <div class="middle">
                <ul class="messages" id="messages">
                    <li class="customer-message">客人訊息</li>
                    <li class="owner-message">業主訊息</li>
                </ul>
            </div>

            <!-- 右侧下部 -->
            <div class="bottom">
                <div class="input-container">
                    <input type="text" id="messageInput" placeholder="請輸入訊息">
                    <button onclick="sendMessage()">發送</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (message) {
                const messagesList = document.getElementById('messages');
                const newMessage = document.createElement('li');
                newMessage.classList.add('owner-message');
                newMessage.textContent = message;
                messagesList.appendChild(newMessage);
                input.value = '';
                messagesList.scrollTop = messagesList.scrollHeight;
            }
        }
    </script>
</body>
</html>
