@{
    Layout = ;
    var memberID = Context.Session.GetString("MemberID");
    var googleMemberId = Context.Session.GetString("GoogleMemberID");
    var displayMemberId = !string.IsNullOrEmpty(googleMemberId) ? googleMemberId : memberID;
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* 全局样式 */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* 容器样式 */
        .container {
            display: flex;
            height: 100vh;
        }

        /* 左侧栏样式 */
        .left-panel {
            width: 33.33%;
            background-color: #FCFCFC;
            display: flex;
            flex-direction: column;
        }

            /* 左侧上部和下部样式 */
            .left-panel .top, .left-panel .bottom {
                box-sizing: border-box;
                border: 1px solid #E0E0E0;
            }

            .left-panel .top {
                flex: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                background-color: #ffffff;
                border-bottom: 1px solid #ccc;
            }

                .left-panel .top .header {
                    width: 100%;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 10px;
                }

                    .left-panel .top .header h2 {
                        margin: 0;
                        font-size: 18px;
                        font-weight: normal;
                        color: #000;
                    }

            .left-panel .bottom {
                flex: 9;
                overflow-y: auto;
            }

        .tab {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }

            .tab a {
                text-decoration: none;
                color: #000;
                padding: 10px;
                flex: 1;
                text-align: center;
                border-bottom: 2px solid transparent;
            }

                .tab a.active {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                }

                .tab a:hover {
                    color: #0056b3;
                }

        /* 右侧栏样式 */
        .right-panel {
            width: 66.67%;
            display: flex;
            flex-direction: column;
        }

            /* 右侧上部、中部、下部样式 */
            .right-panel .top, .right-panel .middle, .right-panel .bottom {
                box-sizing: border-box;
                border: 1px solid #E0E0E0;
                padding: 0px 10px;
            }

            .right-panel .top {
                flex: 1;
                background-color: #FCFCFC;
                display: flex;
                flex-direction: column;
                justify-content: center;
                box-sizing: border-box;
            }

            .right-panel .middle {
                flex: 9;
                background-color: #ffffff;
                overflow-y: auto;
                padding: 10px;
            }

            .right-panel .bottom {
                flex: 1;
                background-color: #f9f9f9;
                display: flex;
                align-items: center;
            }

        /* 客人信息样式 */
        .customer-info {
            display: flex;
            align-items: center;
            background-color: aliceblue;
            padding: 10px;
            border-radius: 10px;
        }

            .customer-info img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin: 20px;
                border: 2px solid #007bff; /* 添加一个边框来实现圆框效果 */
            }

            .customer-info div {
                display: flex;
                flex-direction: column;
            }

        /* 互动信息区样式 */
        .messages {
            list-style: none;
            padding: 0;
        }

            .messages li {
                margin-bottom: 10px;
            }

            .messages .message {
                display: flex;
                flex-direction: column;
                padding: 10px;
                border: 1px solid #E0E0E0;
                border-radius: 5px;
            }

            .messages .customer-message {
                text-align: left;
                background-color: #f1f1f1;
            }

            .messages .owner-message {
                text-align: right;
                background-color: #e1f5fe;
            }

        .message-header {
            font-size: 12px;
            color: #555;
        }

        .message-text {
            margin-top: 5px;
            font-size: 14px;
            color: #000;
        }

        /* 底部输入区样式 */
        .input-container {
            width: 100%;
            display: flex;
        }

            .input-container input {
                flex: 1;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                margin-right: 10px;
            }

            .input-container button {
                padding: 10px 20px;
                border: none;
                background-color: #007bff;
                color: #fff;
                border-radius: 5px;
                cursor: pointer;
            }

                .input-container button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="container">
        <!-- 左侧栏 -->
        <div class="left-panel">
            <!-- 左侧上部 -->
            <div class="top">
                <div class="header">
                    <h2 style="font-size:30px">客人資訊</h2>
                </div>
                <div class="tab">
                    <a href="#" class="active">All messages</a>
                    <a href="#">Unread</a>
                </div>
            </div>
            <!-- 左侧下部 -->
            <div class="bottom" id="leftPanelBottom">
                <!-- 左侧下部内容 -->
            </div>
        </div>

        <!-- 右侧栏 -->
        <div class="right-panel">
            <!-- 右侧上部 -->
            <div class="top" id="rightPanelTop">
                <!-- 右侧上部内容 -->
            </div>

            <!-- 右侧中部 -->
            <div class="middle">
                <ul class="messages" id="messages">
                    <li class="message customer-message">
                        <div class="message-header">客人1 - 10:00 AM</div>
                        <div class="message-text">客人訊息</div>
                    </li>
                    <li class="message owner-message">
                        <div class="message-header">業主1 - 10:05 AM</div>
                        <div class="message-text">業主訊息</div>
                    </li>
                </ul>
            </div>

            <!-- 右侧下部 -->
            <div class="bottom">
                <div class="input-container">
                    <input type="text" id="messageInput" placeholder="請輸入訊息">
                    <button onclick="sendMessage()">發送</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        var memberId = '@displayMemberId';

        async function fetchDialogs(memberId) {
            try {
                const response = await fetch(`https://localhost:7103/api/Dialogs/byMember/${memberId}`);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                if (data.length > 0) {
                    updateUI(data[0]);
                } else {
                    console.error('No dialogs found for this member.');
                }
            } catch (error) {
                console.error('Fetch error: ', error);
            }
        }

        function updateUI(dialog) {
            const leftPanelBottom = document.getElementById('leftPanelBottom');
            const rightPanelTop = document.getElementById('rightPanelTop');

            const leftPanelContent = `
                        <div class="customer-info">
                            <img src="${dialog.memberImage}" alt="客人照片">
                            <div>
                                <span>姓名: ${dialog.firstName} ${dialog.lastName}</span>
                                <span>訊息: ${dialog.detail}</span>
                                <span>飯店: ${dialog.memberHotelName} ${dialog.memberHotelAddress}</span>
                            </div>
                        </div>
                    `;

            const rightPanelContent = `
                     <div>
                            <span>姓名: ${dialog.firstName} ${dialog.lastName}</span>
                        </div>
                        <div class="customer-info">
                            <div>
                                <span>飯店: ${dialog.memberHotelName} ${dialog.memberHotelAddress}</span>
                            </div>
                        </div>
                    `;

            leftPanelBottom.innerHTML = leftPanelContent;
            rightPanelTop.innerHTML = rightPanelContent;
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (message) {
                const messagesList = document.getElementById('messages');
                const newMessage = document.createElement('li');
                newMessage.classList.add('message', 'owner-message');

                const header = document.createElement('div');
                header.classList.add('message-header');
                header.textContent = '業主 - ' + new Date().toLocaleTimeString();

                const text = document.createElement('div');
                text.classList.add('message-text');
                text.textContent = message;

                newMessage.appendChild(header);
                newMessage.appendChild(text);
                messagesList.appendChild(newMessage);

                input.value = '';
                messagesList.scrollTop = messagesList.scrollHeight;
            }
        }

        // 當頁面加載時調用fetchDialogs函數，並傳入相應的memberId
        document.addEventListener('DOMContentLoaded', () => {
            fetchDialogs(memberId);
        });
    </script>
</body>
</html>
