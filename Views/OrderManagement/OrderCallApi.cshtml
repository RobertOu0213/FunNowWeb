@{
    ViewData["Title"] = "OrderCallApi";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>我的訂單</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .order-list {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .order-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e5e5e5;
            padding: 20px 0;
        }

            .order-item:last-child {
                border-bottom: none;
            }

        .order-details {
            flex-grow: 1;
            padding-right: 20px;
        }

            .order-details img {
                width: 100px;
                height: 100px;
                border-radius: 8px;
                object-fit: cover;
            }

        .order-info {
            flex-grow: 1;
            padding-left: 20px;
        }

            .order-info h3 {
                margin: 0 0 10px;
                font-size: 20px;
            }

            .order-info p {
                margin: 5px 0;
            }

        .order-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

            .order-meta span {
                margin-right: 10px;
            }

        .order-actions {
            text-align: right;
        }

            .order-actions p {
                margin: 5px 0;
                font-size: 18px;
                color: #007bff;
                cursor: pointer;
            }

            .order-actions button {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                cursor: pointer;
            }

        .confirmed {
            color: green;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>我的訂單</h1>

    <div class="container">
        <div class="order-list" id="orderList">
            <!-- Orders will be dynamically added here -->
        </div>
    </div>

    <script>
        // Fetch data from API
        fetch('https://localhost:7103/api/Orders/ByMemberAndStatus/2/1')
            .then(response => response.json())
            .then(data => {
                const orderList = document.getElementById('orderList');

                if (data.$values.length > 0) {
                    data.$values.forEach(order => {
                        const orderItem = document.createElement('div');
                        orderItem.classList.add('order-item');

                        // Accessing order details
                        const orderDetails = order.orderDetails.$values;

                        // Constructing the order item HTML
                        orderItem.innerHTML = `
                                    <div class="order-details">
                                        <img src="hotel1.jpg" alt="Hotel Image">
                                    </div>
                                    <div class="order-info">
                                        <div class="order-meta">
                                            <span>訂單編號: ${order.orderId}</span>
                                            <span>預訂日期: ${order.createdAt}</span>
                                            <span class="confirmed">已確認</span>
                                            <span>${calculateDaysRemaining(orderDetails[0].checkInDate)}天內</span>
                                        </div>
                                        <h3>${orderDetails[0].hotelName}</h3>
                                        <p>${formatDates(orderDetails)}</p>
                                    </div>
                                    <div class="order-actions">
                                        <p>TWD ${order.totalPrice}</p>
                                        <button>再次預訂</button>
                                    </div>
                                `;
                        orderList.appendChild(orderItem);
                    });
                } else {
                    orderList.innerHTML = `<p>暫無訂單數據可顯示。</p>`;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                orderList.innerHTML = `<p>加載訂單數據時出現錯誤。</p>`;
            });

        function calculateDaysRemaining(checkInDate) {
            const today = new Date();
            const checkIn = new Date(checkInDate);
            const timeDiff = checkIn.getTime() - today.getTime();
            const daysRemaining = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
            return daysRemaining;
        }

        function formatDates(orderDetails) {
            return orderDetails.map(detail => `${detail.checkInDate} - ${detail.checkOutDate}`).join('<br>');
        }
    </script>

</body>
</html>
