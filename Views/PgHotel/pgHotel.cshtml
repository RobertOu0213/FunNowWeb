﻿@using PrjFunNowWeb.Models.louie_dto
@{
    ViewData["Title"] = "pgHotel";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PrjFunNowWeb.Models.louie_viewmodel.pgHotel_HotelDetailViewModel
<!-- 插入聊天室的Partial View -->
@Html.Partial("~/Views/Chat/Mailroom.cshtml"))


<div class="container mt-5 pt-5" id="top">
    <div class="row">
        <div>
            @*麵包屑*@
            <div>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="https://localhost:7284/home/index" style="color:blue;">首頁</a></li>
                        <li class="breadcrumb-item"><a href="https://localhost:7284/home/index2?searchValue= @(Model.HotelDetail.CountryName)" style="color:blue;">@Model.HotelDetail.CountryName</a></li>
                        <li class="breadcrumb-item"><a href="https://localhost:7284/home/index2?searchValue= @(Model.HotelDetail.CityName)" style="color:blue;">@Model.HotelDetail.CityName</a></li>
                        <li class="breadcrumb-item active">@Model.HotelDetail.HotelName</li>
                    </ol>
                </nav>
            </div>

            @*飯店介紹區*@
            <div class="round-edge-container">
                @*飯店介紹區-第一層*@
                <div class="row">
                    <div class="col-8">
                        <div style="display:flex;">
                            <h2>@Model.HotelDetail.HotelName</h2>
                            @for (int i = 0; i < Model.HotelDetail.LevelStar; i++)
                            {
                                <img src="~/image/louieee_img/star.png" />
                            }
                        </div>
                        <div style="display:flex;">
                            <i class="fa-solid fa-location-dot">@Model.HotelDetail.HotelAddress</i>
                            <a class="link-offset-2 link-underline link-underline-opacity-75" href="#hotel-map">在地圖上顯示</a>
                        </div>
                        <div style="display:flex;">
                            <i class="fa-solid fa-hotel"></i>
                            <p id="description">
                                @if (!string.IsNullOrEmpty(Model.HotelDetail.HotelDescription) && Model.HotelDetail.HotelDescription.Length > 100)
                                {
                                    @(Model.HotelDetail.HotelDescription.Substring(0, 100) + "...")
                                }
                                else
                                {
                                    @Model.HotelDetail.HotelDescription
                                }
                            </p>
                            <a class="link-offset-2 link-underline link-underline-opacity-75" href="#hotel-equips" id="toggle-description">
                                @if (!string.IsNullOrEmpty(Model.HotelDetail.HotelDescription) && Model.HotelDetail.HotelDescription.Length > 100)
                                {
                                    @("顯示更多")
                                }
                            </a>
                        </div>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <h2>TWD @Model.HotelDetail.AverageRoomPrice</h2>
                        <a class="btn btn-primary btn-lg" href="#room-types">查看房型</a>
                    </div>
                </div>
                @*飯店介紹區-第二層*@
                <div class="row">
                    <div class="col-4 d-flex align-items-stretch" data-bs-toggle="modal" data-bs-target="#hotelModal">
                        @if (Model.HotelDetail.HotelImages != null && Model.HotelDetail.HotelImages.Any())//第1張大圖
                        {
                            var ImageUrl = Model.HotelDetail.HotelImages.First().ImageUrl;
                            bool isExternalUrl = ImageUrl.StartsWith("http");

                            <img src="@(isExternalUrl ? ImageUrl : "https://localhost:7284/image/" + ImageUrl)" class="img-fluid" />
                        }
                        else
                        {
                            <img src="~/image/louieee_img/default-picture.jpg" class="img-fluid" />
                        }
                    </div>
                    <div class="col-8">
                        <table data-bs-toggle="modal" data-bs-target="#hotelModal">
                            @if (Model.HotelDetail.HotelImages != null && Model.HotelDetail.HotelImages.Count > 1)
                            {
                                var images = Model.HotelDetail.HotelImages.Skip(1).Take(6).ToList(); // 第2-7張圖, 少幾張就補幾張預設
                                int imageCount = images.Count;
                                for (int i = 0; i < 6; i += 3)
                                {
                                    <tr>
                                        @for (int j = 0; j < 3; j++)
                                        {
                                            if (i + j < imageCount)
                                            {
                                                var imageUrl = images[i + j].ImageUrl;
                                                bool isExternalUrl = imageUrl.StartsWith("http");

                                                <td class="imageBox">
                                                    <img src="@(isExternalUrl ? imageUrl : "https://localhost:7284/image/" + imageUrl)" class="img-fluid" />
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="imageBox">
                                                    <img src="~/image/louieee_img/default-picture.jpg" class="img-fluid" />
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            }
                            else
                            {
                                for (int i = 0; i < 6; i += 3)
                                {
                                    <tr>
                                        @for (int j = 0; j < 3; j++)
                                        {
                                            <td class="imageBox">
                                                <img src="~/image/louieee_img/default-picture.jpg" class="img-fluid" />
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
                @*飯店介紹區-第三層*@
                <div class="row">
                    <div class="col-5">
                        <h3>評論</h3>@*亭蓉做*@
                    </div>
                    <div class="col-4 d-flex flex-column">
                        <h3>設施與服務</h3>
                        <table>
                            @{
                                var hotelEquipments = Model.HotelDetail.HotelEquipments.Take(6).ToList();
                                var rows = (int)Math.Ceiling(hotelEquipments.Count / 3.0);
                            }
                            @for (int i = 0; i < rows; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < 3; j++)
                                    {
                                        var index = i * 3 + j;
                                        if (index < hotelEquipments.Count)
                                        {
                                            <td> <i class="fa-regular fa-circle-check">@hotelEquipments[index]</i></td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    }
                                </tr>
                            }
                        </table>
                        <a class="link-offset-2 link-underline link-underline-opacity-75 align-self-end" href="#hotel-equips">所有設施></a>
                    </div>
                    <div class="col-3">
                        <h3>飯店周邊</h3>
                        <div class="row align-items-end">
                            <div class="col-8">
                                <img src="~/image/louieee_img/map.png" class="img-fluid" />
                            </div>
                            <div class="col-4">
                                <a class="link-offset-2 link-underline link-underline-opacity-75" href="#hotel-map">地圖></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*飯店彈出視窗*@
            <div class="modal fade" id="hotelModal" tabindex="-1" aria-labelledby="hotelModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <ul class="nav nav-underline">
                                @{
                                    var hotelImages = Model.HotelDetail.HotelImages ?? new List<pgHotel_ImageDTO>();
                                    var roomImages = Model.HotelDetail.Rooms?.SelectMany(r => r.RoomImages) ?? new List<pgHotel_ImageDTO>();
                                    var allImages = hotelImages.Concat(roomImages);

                                    var categories = allImages
                                    .GroupBy(img => img.ImageCategoryID)
                                    .OrderBy(g => g.Key)
                                    .ToList();

                                    foreach (var category in categories)
                                    {
                                        var categoryName = category.First().ImageCategoryName;
                                        <li class="nav-item">
                                            <a class="nav-link hotel-modal-nav-link" onclick="smoothScroll('category-@category.Key')">@categoryName</a>
                                        </li>
                                    }
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-9 scrollable-container">
                                    <div class="d-flex flex-wrap">
                                        @{
                                            foreach (var category in categories)
                                            {
                                                var isFirstImage = true;
                                                var imageIndex = 0;
                                                var imageCount = category.Count();
                                                foreach (var image in category)
                                                {
                                                    var imageUrl = image.ImageUrl;
                                                    if (!imageUrl.StartsWith("http"))
                                                    {
                                                        imageUrl = $"https://localhost:7284/image/{imageUrl}";
                                                    }

                                                    // Determine if this is the start of a new row
                                                    bool isNewRow = imageIndex % 2 == 0;

                                                    // Check if it's the last image in the category and if it should move to the next line
                                                    bool isLastImage = imageIndex == imageCount - 1;

                                                    if (isNewRow && !isFirstImage)
                                                    {
                                                        <div class="w-100"></div> <!-- Move to the next line -->
                                                    }

                                                    <div class="p-2" style="flex: 0 0 50%;">
                                                        <img src="@imageUrl" class="img-fluid" alt="Hotel Image"
                                                        @(isFirstImage ? $"id=category-{image.ImageCategoryID}" : "") />
                                                        @{
                                                            isFirstImage = false;
                                                        }
                                                    </div>

                                                    if (isLastImage && (imageIndex + 1) % 2 == 1)
                                                    {
                                                        <div class="w-50"></div> <!-- Empty div to ensure the last image does not stretch -->
                                                    }

                                                    imageIndex++;
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="col-3 fixed-sidebar">
                                    <h3>@Model.HotelDetail.HotelName</h3>
                                    <h4>設施與服務</h4>
                                    <div class="d-flex flex-column">
                                        @foreach (var equipment in Model.HotelDetail.HotelEquipments)
                                        {
                                            <i class="fa-regular fa-thumbs-up">@equipment</i>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-end align-items-center">
                            <h3 class="mb-0">TWD @(Model.HotelDetail.AverageRoomPrice.ToString("F2"))</h3>
                            <button class="btn btn-primary btn-lg ml-3">查看房型</button>
                        </div>
                    </div>
                </div>
            </div>

            @*飯店導覽列*@
            <ul class="nav nav-underline fixed-nav">
                <li class="nav-item">
                    <a class="nav-link this-page-nav-link" href="#room-types">房型</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link this-page-nav-link" href="#hotel-reviews">評論</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link this-page-nav-link" href="#hotel-equips">設施</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link this-page-nav-link" href="#hotel-map">周邊</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link this-page-nav-link" href="#top"><i class="fa-solid fa-up-long"></i></a>
                </li>
            </ul>

            @*房型區--自動生成*@
            <div class="container mt-5 pt-5" id="room-types" data-id="{}">
                <h2>所有房型</h2>
                @if (Model.HotelDetail.Rooms != null && Model.HotelDetail.Rooms.Any())
                {
                    @foreach (var room in Model.HotelDetail.Rooms)
                    {
                        var limitedRoomImages = room.RoomImages?.Take(4).ToList() ?? new List<pgHotel_ImageDTO>();
                        int imageCount = limitedRoomImages.Count;
                        <div class="row room-item round-edge-container" data-room-name="@room.RoomName" data-room-price="@room.RoomPrice" data-room-equips="@Newtonsoft.Json.JsonConvert.SerializeObject(room.RoomEquipments)" data-room-images="@Newtonsoft.Json.JsonConvert.SerializeObject(room.RoomImages)">
                            <h3 data-bs-toggle="modal" data-bs-target="#roomModal">@room.RoomName</h3>
                            <div class="col-4">
                                <table data-bs-toggle="modal" data-bs-target="#roomModal">
                                    <tr>
                                        @if (imageCount > 0)
                                        {
                                            var imageUrl = limitedRoomImages[0].ImageUrl;
                                            bool isExternalUrl = imageUrl.StartsWith("http");
                                            <td colspan="3" class="imageBox"><img src="@(isExternalUrl ? imageUrl : "https://localhost:7284/image/" + imageUrl)" class="img-fluid" /></td>
                                        }
                                        else
                                        {
                                            <td colspan="3" class="imageBox"><img src="~/image/louieee_img/default-picture.jpg" class="img-fluid" /></td>
                                        }
                                    </tr>
                                    <tr>
                                        @for (int i = 1; i < 4; i++)
                                        {
                                            if (i < imageCount)
                                            {
                                                var imageUrl = limitedRoomImages[i].ImageUrl;
                                                bool isExternalUrl = imageUrl.StartsWith("http");
                                                <td class="imageBox"><img src="@(isExternalUrl ? imageUrl : "https://localhost:7284/image/" + imageUrl)" class="img-fluid" /></td>
                                            }
                                            else
                                            {
                                                <td class="imageBox"><img src="~/image/louieee_img/default-picture.jpg" class="img-fluid" /></td>
                                            }
                                        }
                                    </tr>
                                </table>
                            </div>
                            <div class="col-8">
                                <table class="w-100 table">
                                    <tr>
                                        <th class="col-5">設備</th>
                                        <th class="col-2">可住人數</th>
                                        <th class="col-5">今日價格</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @if (room.RoomEquipments != null)
                                            {
                                                foreach (var equipment in room.RoomEquipments.Take(8))
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <i class="fa-regular fa-thumbs-up"></i> @equipment
                                                    </div>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @for (int i = 0; i < room.MaximumOccupancy; i++)
                                            {
                                                <i class="fa-solid fa-person"></i>
                                            }
                                        </td>
                                        <td class="align-bottom">
                                            <h3>TWD @room.RoomPrice</h3>
                                            <div style="margin-left: auto;">
                                                <button class="btn btn-outline-primary btn-lg addCart" data-id="@room.RoomId">加入購物車</button>
                                                <button class="btn btn-primary btn-lg directBuy" data-roomid="">立即下訂</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>暫無房間資訊</p>
                }
            </div>

            @*房間彈出視窗*@
            <div class="modal fade" id="roomModal" tabindex="-1" aria-labelledby="roomModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-10" id="room-images" style="max-height: 400px; overflow-y: auto;">
                                    <!-- 這裡放房間圖片 -->
                                </div>
                                <div class="col-2">
                                    <h2 id="room-name"></h2>
                                    <h3>房間設備</h3>
                                    <div id="room-equipments" class="d-flex flex-column">
                                        <!-- 動態添加設備 -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="row w-100">
                                <div class="col-9 text-end">
                                    <h3 id="room-price"></h3>
                                </div>
                                <div class="col-3 text-end">
                                    <button class="btn btn-outline-primary btn-lg">加入購物車</button>
                                    <button class="btn btn-primary btn-lg">立即下訂</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*評論區(亭蓉做)*@
            <div id="hotel-reviews">
                <h2>評論</h2>
            </div>

            @*設施區*@
            <div id="hotel-equips">
                <h2>設施與服務</h2>
                <div class="round-edge-container">
                    @if (Model.HotelDetail.HotelEquipments != null && Model.HotelDetail.HotelEquipments.Any())
                    {

                        foreach (var equipment in Model.HotelDetail.HotelEquipments)
                        {
                            <div>
                                <i class="fa-regular fa-circle-check">@equipment</i>
                            </div>
                        }

                    }
                    else
                    {
                        <p>暫無設備資訊</p>
                    }
                </div>
            </div>

            @*周邊區*@
            <div class="hotel-detail-container" id="hotel-map">
                <h2>飯店周邊</h2>
                <div class="row round-edge-container">
                    <div class="col-8">
                        <div class="embed-responsive embed-responsive-16by9" style="height: 100%;">
                            <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=@(Model.HotelDetail.Latitude)" style="border:0; width: 100%; height: 100%;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="hotel-info">
                            <div class="hotel-header">
                                <h3>@Model.HotelDetail.HotelName</h3>
                                @for (int i = 0; i < Model.HotelDetail.LevelStar; i++)
                                {
                                    <img src="~/image/louieee_img/star.png" />
                                }
                            </div>
                            <div class="hotel-address">
                                <i class="fa-solid fa-location-dot">@Model.HotelDetail.HotelAddress</i>
                            </div>
                            <div class="hotel-price">
                                <h2>TWD @Model.HotelDetail.AverageRoomPrice</h2>
                                <a class="btn btn-primary btn-lg" href="#room-types">查看房型</a>
                            </div>
                        </div>
                        <div>
                            <h4>你可能也喜歡</h4>
                            @if (Model.HotelDetail.SimilarHotels != null && Model.HotelDetail.SimilarHotels.Any())
                            {
                                <div class="scrollable-container">
                                    @foreach (var hotel in Model.HotelDetail.SimilarHotels)
                                    {
                                        <div class="row mb-3" style="border: 1px solid #ddd; border-radius: 10px; padding: 10px;">
                                            <div class="col-3 p-0">
                                                @{
                                                    var imageUrl = hotel.HotelImage?.ImageUrl ?? "/image/louieee_img/default-picture.jpg";
                                                    if (!imageUrl.StartsWith("http") && imageUrl != "/image/louieee_img/default-picture.jpg")
                                                    {
                                                        imageUrl = $"https://localhost:7284/image/{imageUrl}";
                                                    }
                                                }
                                                <img src="@imageUrl" class="img-fluid full-height-img" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.onerror=null;this.src='/image/louieee_img/otherHotel01.png';" />
                                            </div>
                                            <div class="col-9 vertical-align">
                                                <div style="display:flex; align-items: center;">
                                                    <h4 class="mb-0 mr-2">@hotel.HotelName</h4>
                                                    <div style="display: flex;">
                                                        @for (int i = 0; i < hotel.LevelStar; i++)
                                                        {
                                                            <img src="~/image/louieee_img/star.png" class="ml-1" style="width: 20px; height: 20px;" />
                                                        }
                                                    </div>
                                                </div>
                                                <span style="color:green; font-weight:700;">@hotel.AverageRatingScores /10 </span>
                                                <i class="fa-solid fa-location-dot d-block mt-2">@hotel.HotelAddress</i>
                                                <span style="color:red; font-weight:700;">只剩 @hotel.AvailableRooms 間房!!!</span>
                                                <div style="display:flex; align-items: center; margin-top: 10px;">
                                                    <h3 class="mb-0 mr-3">TWD @(hotel.AverageRoomPrice.ToString("F2"))</h3>
                                                    <a class="btn btn-primary" href="/PgHotel/pgHotel?hotelId=@(hotel.HotelId)&checkInDate=@(Model.HotelDetail.CheckInDate)&checkOutDate=@(Model.HotelDetail.CheckOutDate)">查看房型</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p>暫無推薦資訊</p>
                            }
                        </div>
                    </div>
                </div>
            </div>


            @*推薦其他飯店*@
            <div>
                <h2>你可能也喜歡</h2>
                <div id="carouselExampleControls" class="carousel slide round-edge-container" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var hotelGroups = Enumerable.Range(0, 9).Select(index => new { index })
                            .GroupBy(x => x.index / 3)
                            .Select(g => g.Select(x => x.index).ToList())
                            .ToList();
                            for (int i = 0; i < hotelGroups.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="card-deck mb-5">
                                        @foreach (var index in hotelGroups[i])
                                        {
                                            var hotel = index < Model.HotelDetail.SimilarHotels.Count ? Model.HotelDetail.SimilarHotels[index] : null;
                                            var imageUrl = hotel?.HotelImage?.ImageUrl ?? "/image/louieee_img/default-picture.jpg";
                                            if (!imageUrl.StartsWith("http") && imageUrl != "/image/louieee_img/default-picture.jpg")
                                            {
                                                imageUrl = $"https://localhost:7284/image/{imageUrl}";
                                            }
                                            <a href="@((hotel != null) ? ("/PgHotel/pgHotel?hotelId=" + hotel.HotelId + "&checkInDate=" + @Model.HotelDetail.CheckInDate + "&checkOutDate=" + @Model.HotelDetail.CheckOutDate) : "#")" class="card">
                                                <div class="card">
                                                    <img src="@imageUrl" class="card-img-top" alt="Hotel Image">
                                                    <div class="card-body">
                                                        @if (hotel != null)
                                                        {
                                                            <h5 class="card-title">@hotel.HotelName</h5>
                                                            for (int j = 0; j < hotel.LevelStar; j++)
                                                            {
                                                                <img src="~/image/louieee_img/star.png" />
                                                            }
                                                            <p class="card-text">
                                                                <span>@hotel.AverageRatingScores /10</span>
                                                                <i class="fa-solid fa-location-dot">@hotel.HotelAddress</i>
                                                            </p>
                                                        }
                                                        else
                                                        {
                                                            <h5 class="card-title">飯店名稱</h5>
                                                            <p class="card-text">
                                                                <span>評分</span>
                                                                <i class="fa-solid fa-location-dot">飯店地址</i>
                                                            </p>
                                                        }
                                                    </div>
                                                    <div class="card-footer">
                                                        <small class="text-body-secondary">只剩 @(hotel?.AvailableRooms) 間房!!!</small>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


