            var descriptionElement = document.getElementById('description');

            if (toggleDescription && descriptionElement) {
                var isExpanded = false;
                var fullDescription = "@Html.Raw(Model.HotelDetail.HotelDescription.Replace("\n", "\\n").Replace("\r", "\\r").Replace("\"", "\\\""))";
                var shortDescription = "@Html.Raw(Model.HotelDetail.HotelDescription.Length > 100 ? Model.HotelDetail.HotelDescription.Substring(0, 100) + "..." : Model.HotelDetail.HotelDescription)";

                toggleDescription.addEventListener('click', function (e) {
                    e.preventDefault();
                    if (isExpanded) {
                        descriptionElement.textContent = shortDescription;
                        toggleDescription.textContent = '顯示更多';
                    } else {
                        descriptionElement.textContent = fullDescription;
                        toggleDescription.textContent = '顯示更少';
                    }
                    isExpanded = !isExpanded;
                });
            }
        });
