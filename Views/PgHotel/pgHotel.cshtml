                toggleDescription.addEventListener('click', function (e) {
                    e.preventDefault();
                    if (isExpanded) {
                        descriptionElement.textContent = shortDescription;
                        toggleDescription.textContent = '顯示更多';
                    } else {
                        descriptionElement.textContent = fullDescription;
                        toggleDescription.textContent = '顯示更少';
                    }
                    isExpanded = !isExpanded;
                });
            }


            //你可能也喜歡-輪播
            $(document).ready(function () {
                $('#carouselExampleControls').carousel({
                    interval: false // 禁用自动轮播
                });

                $('#carouselExampleControls').on('slide.bs.carousel', function (e) {
                    var $e = $(e.relatedTarget);
                    var idx = $e.index();
                    var itemsPerSlide = 3;
                    var totalItems = $('.carousel-item').length;

                    if (idx >= totalItems - (itemsPerSlide - 1)) {
                        var it = itemsPerSlide - (totalItems - idx);
                        for (var i = 0; i < it; i++) {
                            // append slides to end
                            if (e.direction === "left") {
                                $('.carousel-item').eq(i).appendTo('.carousel-inner');
                            } else {
                                $('.carousel-item').eq(0).appendTo('.carousel-inner');
                            }
                        }
                    }
                });
            });



            //飯店彈出視窗-查看房型
            window.scrollToRoomTypes = function () {
                var roomTypesElement = document.getElementById('room-types');
                var hotelModal = document.getElementById('hotelModal');

                if (roomTypesElement && hotelModal) {
                    // 添加事件监听器以在模态框完全隐藏后滚动到目标元素
                    hotelModal.addEventListener('hidden.bs.modal', function () {
                        roomTypesElement.scrollIntoView({ behavior: 'smooth' });
                    }, { once: true });

                    // 关闭模态框
                    var modalInstance = bootstrap.Modal.getInstance(hotelModal);
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                }
            };





            //導覽列-避免被遮住
            const links = document.querySelectorAll('.this-page-nav-link');

            links.forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);

                    if (targetElement) {
                        const offset = 100; // 调整偏移量，根据您的实际情况设置
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - offset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            //房間彈出視窗

            var roomModal = document.getElementById('roomModal');
            var roomNameElement = document.getElementById('room-name');
            var roomEquipmentsElement = document.getElementById('room-equipments');
            var roomPriceElement = document.getElementById('room-price');
            var roomImagesElement = document.getElementById('room-images');

            var roomItems = document.querySelectorAll('.room-item');
            roomItems.forEach(function (roomItem) {
                roomItem.addEventListener('click', function () {
                    var roomName = roomItem.getAttribute('data-room-name');
                    var roomPrice = roomItem.getAttribute('data-room-price');
                    var roomEquipments = JSON.parse(roomItem.getAttribute('data-room-equips'));
                    var roomImages = JSON.parse(roomItem.getAttribute('data-room-images'));

                    roomNameElement.textContent = roomName;
                    roomPriceElement.textContent = 'TWD ' + parseFloat(roomPrice).toFixed(2);

                    roomEquipmentsElement.innerHTML = '';
                    roomEquipments.forEach(function (equip) {
                        var equipElement = document.createElement('div');
                        equipElement.classList.add('d-flex', 'align-items-center');
                        equipElement.innerHTML = '<i class="fa-regular fa-thumbs-up"></i> ' + equip;
                        roomEquipmentsElement.appendChild(equipElement);
                    });

                    roomImagesElement.innerHTML = '';
                    for (var i = 0; i < roomImages.length; i += 2) {
                        var rowElement = document.createElement('div');
                        rowElement.classList.add('d-flex', 'flex-row', 'mb-2');

                        for (var j = 0; j < 2; j++) {
                            if (i + j < roomImages.length) {
                                var imgElement = document.createElement('img');
                                imgElement.src = 'https://localhost:7284/image/' + roomImages[i + j].ImageUrl;
                                imgElement.classList.add('img-fluid', 'p-2');
                                rowElement.appendChild(imgElement);
                            }
                        }

                        roomImagesElement.appendChild(rowElement);
                    }
                });
            });

            //購物車
            $('.addCart').on('click', async function () {
                const roomID = $(this).data('id');
                // console.log(roomID);

                //是否有登入
                // const memberID = getMemberID();
                // if (!memberID) {
                //     window.location.href = '/login';
                //     return;
                // }

                const orderDetail = {
                    MemberID: 1,
                    RoomID: roomID,
                    CheckInDate: "2024-06-15",
                    CheckOutDate: "2024-06-20",

                };

                try {
                    const response = await fetch('https://localhost:7103/api/Cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(orderDetail)
                    });

                    if (!response.ok) {
                        throw new Error(response.statusText);
                    }

                    const data = await response.json();
                    if (data.success) {
                        // console.log(data);
                        showCartModal(data);
                    }
