<script defer>
    document.addEventListener('DOMContentLoaded', () => {
        const ongoingTab = document.getElementById('ongoingTab');
        const completedTab = document.getElementById('completedTab');
        const cancelledTab = document.getElementById('cancelledTab');
        const tabContent = document.getElementById('tabContent');

        function setActiveTab(selectedTab) {
            document.querySelectorAll('.tab__link').forEach(tab => {
                tab.classList.remove('active');
            });
            selectedTab.classList.add('active');
        }

        function loadTabContent(tab) {
            switch (tab) {
                case 'ongoing':
                    tabContent.innerHTML = '<p>這裡是進行中的內容。</p>';
                    break;
                case 'completed':
                    tabContent.innerHTML = '<p>這裡是已完成的內容。</p>';
                    break;
                case 'cancelled':
                    tabContent.innerHTML = '<p>這裡是已取消的內容。</p>';
                    break;
                default:
                    tabContent.innerHTML = '';
            }
        }

        ongoingTab.addEventListener('click', () => {
            setActiveTab(ongoingTab);
            loadTabContent('ongoing');
        });

        completedTab.addEventListener('click', () => {
            setActiveTab(completedTab);
            loadTabContent('completed');
        });

        cancelledTab.addEventListener('click', () => {
            setActiveTab(cancelledTab);
            loadTabContent('cancelled');
        });

        // Set initial active tab and content
        setActiveTab(ongoingTab);
        loadTabContent('ongoing');

    });
</script>