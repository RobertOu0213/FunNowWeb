    <script type="text/javascript">
        //決定會員資訊是否顯示
        document.addEventListener("DOMContentLoaded", function () {
           
            var memberInformation = @Html.Raw(memberInfoJson) || '{}';
            var googleMemberId = '@googleMemberId';
            var googleMemberFirstName = '@googleMemberFirstName';
            var token = '@token';
            
            console.log("Google Member ID: " + googleMemberId);
            console.log("Google Member First Name: " + googleMemberFirstName);

            // 自己輸入帳號密碼的登入者
            if (memberInformation !== null && token) {
                
                var memberData = JSON.parse(memberInformation);
                var memberId = memberData.MemberId;
                var memberFirstName = memberData.FirstName;
                

                if (memberId && memberFirstName) 
                {
                    document.getElementById("memberContent").style.display = "block";
                    document.getElementById("memberId").innerText = memberId;
                    document.getElementById("memberFirstName").innerText = memberFirstName;
                }

            }
            // Google登入者
            else if (googleMemberId && googleMemberFirstName) 
            {
                document.getElementById("memberContent").style.display = "block";
                document.getElementById("memberId").innerText = googleMemberId;
                document.getElementById("memberFirstName").innerText = googleMemberFirstName;
            }
             // 如果兩個地方都沒有資料，顯示訪客內容
            else 
            {
               document.getElementById("guestContent").style.display = "block";
            }


            //點下登出按鈕，把session storage的資料清空，也把google登入的session清空
            document.getElementById("logoutButton").addEventListener("click", function () {
               
                // 重定向到登出操作方法
                window.location.href = "@Url.Action("Logout", "Member")";
            });
        });
    </script>


    <script>
        //如果莫名出錯應該是這一段有錯
        document.addEventListener('DOMContentLoaded', function () {
            // 監聽滾動事件
            window.addEventListener('scroll', function () {
                var floatingContainer = document.querySelector('.floating-container');
                if (!floatingContainer) {
                    console.warn('No floating container found.');
                    return; // 如果沒有找到 floating-container 元素，直接返回
                }
                var scrollPosition = window.scrollY || window.pageYOffset;
                // 如果滾動至頁面中間，顯示浮動容器，否則隱藏
                if (scrollPosition > (window.innerHeight / 2)) {
                    floatingContainer.style.display = 'block';
                } else {
                    floatingContainer.style.display = 'none';
                }
            });
        });
    </script>



    <script>
        $(document).ready(function () {
            // 頁面剛載入時隱藏訂房欄，顯示導航欄
            $('.booking-area').hide();
            $('.navbar').show();

            // 初始檢查滾動距離，以確保在頁面載入時的初始狀態正確
            $(window).trigger('scroll');

            // 當滾動頁面時
            $(window).scroll(function () {
                // 獲取目前的滾動距離
                var scrollDistance = $(window).scrollTop();

                // 如果滾動距離超過 0，則隱藏導航欄和訂房欄
                if (scrollDistance > 0) {
                    $('.navbar').hide();
                    $('.booking-area').hide();
                } else {
                    // 如果滾動距離小於等於 0，則顯示導航欄，隱藏訂房欄
                    $('.navbar').show();
                    $('.booking-area').hide();
                }

                // 如果滾動的距離超過 500px，則顯示訂房欄
                if (scrollDistance > 500)
                    $('.booking-area').show();
                else // 如果滾動距離小於等於 500，則隱藏訂房欄
                    $('.booking-area').hide();


                if (scrollDistance === 0) {  // 回到原點時
                    $('.navbar').show();
                    $('.booking-area').hide();
                }
            });
        });

    </script>

